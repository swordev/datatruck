    "@types/node": "^20.6.2",
    "@wspa/cli": "^0.6.0",
    "@wspa/config": "^0.3.1",
    "npm-check-updates": "^16.14.4",
    "prettier": "3.0.3",
    "prettier-plugin-packagejson": "^2.4.5",
    "prettier-plugin-sort-json": "^3.1.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.4"
  },
  "engine": {
    "node": ">=18.0.0"
  },
  "x-wspa": {
    "extends": "@wspa/config/auto",

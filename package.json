{
  "name": "@datatruck/root",
  "private": true,
  "description": "Tool for do and managing backups",
  "homepage": "https://github.com/swordev/datatruck#readme",
  "bugs": {
    "url": "https://github.com/swordev/datatruck/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/swordev/datatruck"
  },
  "license": "MIT",
  "author": {
    "name": "Juanra GM",
    "email": "juanrgm724@gmail.com",
    "url": "https://github.com/juanrgm"
  },
  "scripts": {
    "build": "wireit",
    "build:schema": "wireit",
    "build:ts": "wireit",
    "clean": "wspa clean && rimraf .wireit",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "patch": "wspa patch",
    "start": "node packages/datatruck/lib",
    "test": "jest",
    "watch": "tsc -b tsconfig.build.json -w"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@wspa/cli": "^0.1.1",
    "@wspa/config": "^0.0.4",
    "jest": "^28.1.0",
    "prettier": "2.6.2",
    "prettier-plugin-packagejson": "^2.2.18",
    "prettier-plugin-sort-json": "^0.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4",
    "wireit": "^0.4.3"
  },
  "engine": {
    "node": ">=16.0.0"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts",
        "build:schema"
      ]
    },
    "build:schema": {
      "dependencies": [
        "build:ts"
      ],
      "command": "node ./packages/cli/scripts/gen-schema.js"
    },
    "build:ts": {
      "command": "tsc -b tsconfig.build.json --pretty",
      "clean": "if-file-deleted",
      "files": [
        "packages/*/src/**/*.ts",
        "packages/*/src/tsconfig.json"
      ],
      "output": [
        "packages/*/lib/**",
        "packages/*/.tsbuildinfo"
      ],
      "packageLocks": [
        "pnpm-lock.yaml"
      ]
    }
  },
  "x-wspa": {
    "extends": "@wspa/config/auto",
    "pkgManifest": {
      "description": "Tool for creating and managing backups",
      "homepage": "https://github.com/swordev/datatruck#readme",
      "bugs": {
        "url": "https://github.com/swordev/datatruck/issues"
      },
      "repository": {
        "type": "git",
        "url": "https://github.com/swordev/datatruck"
      },
      "license": "MIT",
      "author": {
        "name": "Juanra GM",
        "email": "juanrgm724@gmail.com",
        "url": "https://github.com/juanrgm"
      }
    }
  }
}

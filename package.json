{
  "name": "@datatruck/root",
  "private": true,
  "description": "Tool for do and managing backups",
  "homepage": "https://github.com/swordev/datatruck#readme",
  "bugs": {
    "url": "https://github.com/swordev/datatruck/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/swordev/datatruck"
  },
  "license": "MIT",
  "author": {
    "name": "Juanra GM",
    "email": "juanrgm724@gmail.com",
    "url": "https://github.com/juanrgm"
  },
  "scripts": {
    "build": "wireit",
    "build:schema": "wireit",
    "build:ts": "wireit",
    "clean": "wspa clean && rimraf .wireit",
    "compose": "wspa compose",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "start": "node packages/datatruck/lib",
    "test": "jest",
    "watch": "tsc -b tsconfig.build.json -w"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.2",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@tsconfig/node16": "^1.0.3",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@wspa/cli": "^0.6.0",
    "@wspa/config": "^0.3.1",
    "jest": "^29.3.1",
    "prettier": "2.8.0",
    "prettier-plugin-packagejson": "^2.3.0",
    "prettier-plugin-sort-json": "^0.0.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3",
    "wireit": "^0.8.0"
  },
  "engine": {
    "node": ">=16.0.0"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts",
        "build:schema"
      ]
    },
    "build:schema": {
      "dependencies": [
        "build:ts"
      ],
      "command": "node ./packages/cli/scripts/gen-schema.js"
    },
    "build:ts": {
      "command": "tsc -b tsconfig.build.json --pretty",
      "clean": "if-file-deleted",
      "files": [
        "packages/*/src/**/*.ts",
        "packages/*/src/tsconfig.json"
      ],
      "output": [
        "packages/*/lib/**",
        "packages/*/.tsbuildinfo"
      ],
      "packageLocks": [
        "pnpm-lock.yaml"
      ]
    }
  },
  "x-wspa": {
    "extends": "@wspa/config/auto",
    "pkgManifest": {
      "description": "Tool for creating and managing backups",
      "homepage": "https://github.com/swordev/datatruck#readme",
      "bugs": {
        "url": "https://github.com/swordev/datatruck/issues"
      },
      "repository": {
        "type": "git",
        "url": "https://github.com/swordev/datatruck"
      },
      "license": "MIT",
      "author": {
        "name": "Juanra GM",
        "email": "juanrgm724@gmail.com",
        "url": "https://github.com/juanrgm"
      }
    }
  }
}
